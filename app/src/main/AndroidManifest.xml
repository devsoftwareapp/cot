<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- İnternet izni (webview için) -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Depolama izinleri -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- Android 11+ için TÜM DOSYALARA ERİŞİM izni -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    
    <!-- ==== BELGE TARAMA İÇİN KAMERA İZİNLERİ ==== -->
    <!-- 1. Kamera kullanım izni - TEK SEFER EKLENDİ -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- 2. Video kaydı için ses izni (isteğe bağlı) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" 
        tools:ignore="UnusedAttribute" />
    
    <!-- 3. Android 13+ için POST_NOTIFICATIONS (isteğe bağlı) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" 
        tools:ignore="UnusedAttribute" />

    <!-- API seviyesi kontrolü -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.camera.flash" android:required="false" />

    <!-- Kamera özellikleri (opsiyonel) -->
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.PDFReader"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="33">
        
        <!-- DOĞRU AKTİVİTE İSMİ: IndexActivity -->
        <activity
            android:name=".IndexActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- PDF dosyalarını açmak için -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="file" />
                <data android:mimeType="application/pdf" />
                <data android:pathPattern=".*\\.pdf" />
            </intent-filter>
            
            <!-- Tüm dosya türleri için (opsiyonel) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="content" />
                <data android:mimeType="*/*" />
                <data android:pathPattern=".*\\.pdf" />
            </intent-filter>

            <!-- PDF PAYLAŞIMINI KABUL ET - SEND intent -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/pdf" />
            </intent-filter>
            
            <!-- ÇOKLU PDF PAYLAŞIMI - SEND_MULTIPLE intent -->
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/pdf" />
            </intent-filter>

        </activity>
        
        <!-- Viewer Activity (eğer varsa) -->
        <activity
            android:name=".ViewerActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        
        <!-- PDF araçları için aktiviteler -->
        <activity
            android:name=".tools.MergeActivity"
            android:exported="false" />
        <activity
            android:name=".tools.ScanActivity"
            android:exported="false" />

        <!-- FileProvider - Sabit authority kullan -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.devsoftware.pdfreader.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Kamera izinleri için güvenlik ayarları -->
        <meta-data
            android:name="android.hardware.camera"
            android:required="false" />
        <meta-data
            android:name="android.hardware.camera.autofocus"
            android:required="false" />
        <meta-data
            android:name="android.hardware.camera.flash"
            android:required="false" />

    </application>

</manifest>

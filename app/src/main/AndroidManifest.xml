<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.devsoftware.pdfreader">

    <!-- İnternet izni (OCR veya bulut hizmetleri için) -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Depolama izinleri -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- Android 11+ için TÜM DOSYALARA ERİŞİM izni -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.PDFReader"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="31">
        
        <!-- ANA AKTİVİTE: MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:launchMode="singleTop">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- PDF dosyalarını açmak için -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="file" />
                <data android:mimeType="application/pdf" />
                <data android:pathPattern=".*\\.pdf" />
            </intent-filter>
            
            <!-- Tüm dosya türleri için (opsiyonel) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="content" />
                <data android:mimeType="*/*" />
                <data android:pathPattern=".*\\.pdf" />
            </intent-filter>

            <!-- PDF PAYLAŞIMINI KABUL ET - SEND intent -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/pdf" />
            </intent-filter>
            
            <!-- ÇOKLU PDF PAYLAŞIMI - SEND_MULTIPLE intent -->
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/pdf" />
            </intent-filter>

        </activity>
        
        <!-- Diğer araç aktiviteleri -->
        <activity
            android:name=".BirlestirmeActivity"
            android:exported="false"
            android:label="PDF Birleştirme" />
        
        <activity
            android:name=".SesliOkumaActivity"
            android:exported="false"
            android:label="Sesli Okuma" />
            
        <activity
            android:name=".OrcActivity"
            android:exported="false"
            android:label="OCR Metin Çıkar" />
            
        <activity
            android:name=".ImzaActivity"
            android:exported="false"
            android:label="PDF İmzalama" />
            
        <activity
            android:name=".SikistirmaActivity"
            android:exported="false"
            android:label="PDF Sıkıştırma" />
            
        <activity
            android:name=".OrganizeActivity"
            android:exported="false"
            android:label="Sayfa Organize" />
            
        <activity
            android:name=".ResimdenPdfActivity"
            android:exported="false"
            android:label="Resimden PDF" />
            
        <activity
            android:name=".PdfResmeActivity"
            android:exported="false"
            android:label="PDF'den Resim" />
        
        <!-- PDF Görüntüleyici -->
        <activity
            android:name=".PdfViewerActivity"
            android:exported="false"
            android:label="PDF Görüntüleyici"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <!-- FileProvider - Sabit authority kullan -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.devsoftware.pdfreader.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
